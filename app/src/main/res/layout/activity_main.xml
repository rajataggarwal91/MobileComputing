<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/MainActivity">

    <TextView android:text="IF" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IF" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ConditionSpinner"
        android:spinnerMode="dropdown"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/IF"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Do"
        android:id="@+id/DoTextView"
        android:layout_below="@+id/ConditionSpinner"
        android:layout_toEndOf="@+id/IF"
        android:layout_marginTop="20dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ActionSpinner"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.5"
        android:spinnerMode="dropdown"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:spinnerMode="dropdown"
        android:layout_marginStart="159dp"
        android:id="@+id/OnOffSpinner"
        android:layout_alignTop="@+id/ActionSpinner"
        android:layout_toEndOf="@+id/DoTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/SubmitButton"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/ActionSpinner"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
